<body class="preview" id="top" data-spy="scroll" data-target=".subnav" data-offset="80">

<!-- Navbar
  ================================================== -->
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="../">Alfred</a>
      <div class="nav-collapse collapse" id="main-menu">
        <ul class="nav" id="main-menu-left">
          <!--<li><a onclick="pageTracker._link(this.href); return false;" href="http://news.bootswatch.com">News</a></li>-->
        </ul>

        <ul class="nav pull-right" id="main-menu-right">


          <li><a rel="tooltip" href="/" title="Inicio">Inicio</a></li>
          <% if current_account %>
          <li><a rel="tooltip" href="/" title="Profile"><%= current_account.email %></a></li>
          <li><a rel="tooltip" href="/logout" title="Salir">Salir</a><li>
          <% else %>
          <li><a rel="tooltip" href="/login" title="Entrar">Entrar</a><li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="container">

  <section id="main-content">
    <%= yield %>
  </section>
</div><!-- /container -->

<hr>

